<table class="table students-table table-responsive">
    <thead>
    <tr>
        <th scope="col col_name" class="col-link-name"><a class="col-link" href="/school/1?sort=s.name&direction=desc">Name</a></th>
        <th scope="col col_age" class="col-link-age"><a class="col-link" href="/school/1?sort=s.age&direction=desc">Age</a></th>
        <th scope="col col_sex">Sex</th>
        <th scope="col">Delete</th>
        <th scope="col">Edit</th>
        <th scope="col">Page</th>
        <th scope="col">Teachers</th>
    </tr>
    </thead>
    <tbody class="currentBody">
    {% for student in pagination %}
        <tr class="st_col{{ student.id }}">
            <td>{{ student.name }}</td>
            <td>{{ student.age }}</td>
            <td>{% if (student.sex) %} man {% else %} woman {% endif %}</td>
            <td>
                <button class="btn btn-danger removeStudent" type="button" data-id="{{ student.id }}">Delete</button>
            </td>
            <td>
                <button class="btn btn-warning editInfo" data-toggle="modal" data-id="{{ student.id }}" data-name="{{ student.name }}">Edit</button>
            </td>
            <td>
                <button class="btn btn-primary openPage" data-id="{{ student.id }}">Page</button>
            </td>
            <td>
                <button class="btn btn-success openTeachers" data-id="{{ student.id }}">Teachers</button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    <nav>
        <ul class="pagination">
            <li class="page-item prev">
                <a class="page-link" href="/school/{% if page > 1 %}{{ page - 1 }}{% else %}{{ page }}{% endif %}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for i in 1..count %}
                <li class="page-item pg{{ i }} {% if i == page %} {{ "active" }} {% endif %}"><a class="page-link" href="/school/{{ i }}">{{ i }}</a></li>
            {% endfor %}
            <li class="page-item">
                <a class="page-link" href="/school/{% if page + 1 > count %}{{ page }}{% else %}{{ page + 1 }}{% endif %}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>