{% extends 'base.html.twig' %}

{% block stylesheet %}
	{{ parent() }}

	<link rel="stylesheet" type="text/css" href="{{ asset('web/css/main.css') }}">
{% endblock %}

{% block body %}

	<div class="container">
		<div class="login center-block">
			<hr>
			<h2>School Panel Login</h2>
			<hr>
			<div class="alert alert-danger alert-error"></div>	
			<form id="signIn">
				<div class="form-group">
					<label for="login">Login:</label>
  					<input type="text" class="form-control" id="login" autocomplete="off">
				</div>	
				<div class="form-group">
					<label for="password">Password:</label>
  					<input type="password" class="form-control" id="password" autocomplete="off">
				</div>
				<button class="btn btn-success" type="submit">Login</button>
			</form>
		</div>	
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script src="{{ asset('web/js/admin.js') }}"></script>

{% endblock %}